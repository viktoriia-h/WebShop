@page
@model WebApplication5.ViewModels.LoginViewModel;

@{
	ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<form method="post" asp-controller="User" asp-action="LoginUser">
	<div class="row">
	<div class="col-md-4">
		<h2>Use a local account to log in.</h2>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-floating">
			<input  asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
			<label asp-for="Email" class="form-label"></label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-floating">
			<input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
			<label asp-for="Password" class="form-label"></label>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div>
			<input type="submit" class="w-100 btn btn-lg btn-primary" />
		</div>
	</div>
</div>
</form>

